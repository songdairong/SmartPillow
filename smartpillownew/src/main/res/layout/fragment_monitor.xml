                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/green2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="是否正常："
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/green2"/>

                        <TextView
                            android:id="@+id/tv_is_normal_heart_rate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="正常"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/green2"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/transparent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="指标范围："
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tv_point_range_heart_rate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="0——0"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="监测时间："
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tv_time_heart_rate"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="2018-07-30 12:35:16"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
            <!--翻身次数-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/item_round_shape_white"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_range"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"/>

                <ImageView
                    android:id="@+id/iv_range_bg"
                    android:src="@drawable/sleep_info_top_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
